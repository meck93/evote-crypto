{
  "name": "mp-crypto",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "pre-commit": "lint-staged",
    "test": "nyc --reporter=text ts-mocha ./**/*.spec.ts",
    "test:timeout": "nyc --reporter=text ts-mocha ./**/*.spec.ts --timeout 10000",
    "test:watch": "ts-mocha ./**/*.spec.ts -w --watch-extensions ts ",
    "test:report": "nyc --reporter=lcov ts-mocha ./**/*.spec.ts",
    "format": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|css|md)\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "ts-mocha": "./node_modules/.bin/ts-mocha",
    "ts-node": "./node_modules/.bin/ts-node",
    "tsc": "./node_modules/.bin/tsc"
  },
  "license": "MIT",
  "dependencies": {
    "bn.js": "^5.0.0",
    "elliptic": "^6.5.1",
    "hash.js": "^1.1.7",
    "random": "^2.1.1",
    "web3": "^1.2.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.5",
    "@types/elliptic": "^6.4.10",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.8.0",
    "chai": "^4.2.0",
    "eslint": "^6.7.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "lint-staged": "^9.4.3",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "sinon": "^7.5.0",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.2.1",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.5.0",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "lint-staged": {
    "*.+(ts)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(js|ts|json)": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "all": true
  }
}
