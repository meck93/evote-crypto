{
  "name": "@meck93/evote-crypto",
  "version": "0.1.9",
  "description": "",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:meck93/evote-crypto.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "postinstall": "./addCurveToEllipticLibrary.sh",
    "prebuild": "rm -rf lib",
    "build": "tsc",
    "pre-commit": "lint-staged",
    "test": "nyc --reporter=text ts-mocha \"./test/**/*.spec.ts\"",
    "test:timeout": "nyc --reporter=text ts-mocha \"./test/**/*.spec.ts\" --timeout 100000",
    "test:watch": "ts-mocha \"./test/**/*.spec.ts\" -w --watch-extensions ts",
    "test:report": "nyc --reporter=html ts-mocha \"./test/**/*.spec.ts\"",
    "format": "prettier --write \"**/*.+(js|ts|json|md)\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "ts-mocha": "./node_modules/.bin/ts-mocha",
    "ts-node": "./node_modules/.bin/ts-node",
    "tsc": "./node_modules/.bin/tsc",
    "preversion": "build"
  },
  "license": "MIT",
  "bundledDependencies": [
    "elliptic"
  ],
  "dependencies": {
    "bn.js": "^5.1.1",
    "elliptic": "6.5.2",
    "hash.js": "^1.1.7",
    "random": "^2.1.1",
    "web3": "^1.2.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/elliptic": "^6.4.11",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.16.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src"
    ]
  }
}
